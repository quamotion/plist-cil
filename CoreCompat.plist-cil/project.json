{
  "version": "1.15.0-*",

  "authors": [ "claunia" ],
  "title": "plist-cil (Apple Property List support) for .NET Core",
  "description": "MIT licensed C#/.NET parser and writer for Apple and GnuStep Property Lists, supporting ASCII, Binary and Xml formats, based on Java's dd-plist.",

  "packOptions": {
    "licenseUrl": "https://raw.githubusercontent.com/claunia/plist-cil/master/LICENSE",
    "owners": [ "quamotion" ],
    "repository": {
      "type": "git",
      "url": "https://github.com/quamotion/plist-cil"
    }
  },

  "buildOptions": {
    "define": [ "NETCORE" ],
    "keyFile": "../plist-cil/plist-cil.snk",
    "strongName": true,
    "compile": {
      "include": [
        "../plist-cil/**/*.cs"
      ],
      "exclude": [
        "../plist-cil/Properties/*.cs",
        "../plist-cil/bin/**/*.cs",
        "../plist-cil/obj/**/*.cs"
      ]
    }
  },

  "frameworks": {
    "netstandard1.3": {
      "dependencies": {
        "System.Xml.XmlDocument": "4.0.1",
        "System.Reflection.TypeExtensions": "4.1.0",
        "System.IO.FileSystem": "4.0.1",
        "System.Collections": "4.0.11",
        "System.Text.RegularExpressions": "4.1.0",
        "System.Linq": "4.1.0",
        "System.Globalization": "4.0.11",
        "System.Runtime.Extensions": "4.1.0",
        "System.Threading": "4.0.11",
        "System.Runtime.Numerics": "4.0.1"
      }
    },
    "net40": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0",
        "System.Numerics":  "4.0.0.0"
      }
    },
    "net45": {
      "frameworkAssemblies": {
        "System.Xml": "4.0.0.0",
        "System.Numerics": "4.0.0.0"
      }
    }
  }
}